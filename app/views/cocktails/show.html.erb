<h1><%= @cocktail.name %></h1>
<h2>Ingredients</h2>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description + " " + dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete%></li>

  <% end %>
</ul>

   <% if @cocktail.photo? %>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill, radius: "40" %>
  <% else %>
    <%= simple_form_for(@cocktail) do |f| %>
      <!-- [...] -->
      <%= f.input :photo, :label => "Upload a photo" %>
      <%= f.input :photo_cache, as: :hidden %>
      <!-- [...] -->
    <% end %>
  <% end %>


<%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail)   %>





<%= link_to "Go back to all cocktails", cocktails_path  %>
