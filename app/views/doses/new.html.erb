<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
  <%= f.association :ingredient, collection: Ingredient.order(:name), prompt: ("Select an ingredient") %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
